<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.



        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SignUpFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:padding">16dp</item>
    </style>

    <style name="formField" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/field_bg</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="formButton" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/btn_next_bg</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="driverformField" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/field_bg</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="maptextview" parent="android:Widget.Holo.Light.EditText">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>